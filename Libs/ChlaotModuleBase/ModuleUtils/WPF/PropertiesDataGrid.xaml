<UserControl x:Class="Eng.Chlaot.ChlaotModuleBase.ModuleUtils.WPF.PropertiesDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eng.Chlaot.ChlaotModuleBase.ModuleUtils.WPF"
             mc:Ignorable="d" 
             x:Name="uc"
             d:DesignHeight="450" d:DesignWidth="800">
  <DataGrid ItemsSource="{Binding Properties,ElementName=uc}"  
            AutoGenerateColumns="False" CanUserAddRows="False">
    <DataGrid.Columns>
      <DataGridTextColumn Header="SimProperty" Binding="{Binding Property.Name}" />
      <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
    </DataGrid.Columns>
  </DataGrid>
</UserControl>

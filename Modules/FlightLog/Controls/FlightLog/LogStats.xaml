<UserControl x:Class="Eng.EFsExtensions.Modules.FlightLogModule.Controls.FlightLog.LogStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eng.EFsExtensions.Modules.FlightLogModule.Controls.FlightLog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <TabControl DataContext="{Binding Stats}">
    <TabItem Header="Descriptive">
      <DataGrid ItemsSource="{Binding DescriptiveStats}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Title" Binding="{Binding Stat.Title}" />
          <DataGridTemplateColumn Header="Min">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Label >
                  <TextBlock Text="{Binding Min.DisplayValue}" />
                  <Label.ToolTip>
                    <local:LogFlightToolTip LogFlight="{Binding Min.Flight}" />
                  </Label.ToolTip>
                </Label>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
          <DataGridTemplateColumn Header="Max">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Label Content="{Binding Max.DisplayValue}">
                  <Label.ToolTip>
                    <local:LogFlightToolTip LogFlight="{Binding Max.Flight}" />
                  </Label.ToolTip>
                </Label>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
          <DataGridTextColumn Header="Avg" Binding="{Binding Avg}" />
          <DataGridTemplateColumn Header="">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Button Padding="16 0 16 0">(...)</Button>
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>
    </TabItem>
    <TabItem Header="Grouping">
      <DataGrid ItemsSource="{Binding GroupingStats}" >
      </DataGrid>
    </TabItem>
  </TabControl>
</UserControl>
